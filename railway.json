
  {
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "cd frontend && npm install && npm run build"
    },
    "deploy": {
      "numReplicas": 1,
      "startCommand": "gunicorn backend.wsgi --log-file -",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }